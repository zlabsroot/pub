# -------------------------------------------------------------------
# For a specific host 'abc'
# -------------------------------------------------------------------
Host    abc
        HostName abc.example.com
        User test
        Port 1234
        IdentityFile ~/.ssh/custom_rsa1


# -------------------------------------------------------------------
# For a hostname patterns 
# -------------------------------------------------------------------
Host    *myhosts* *example.com dummy*
        User test2
        Port 5678
        IdentityFile ~/.ssh/custom_rsa2

# -------------------------------------------------------------------
# Default values for all
# -------------------------------------------------------------------
Host *
        User jarvis
        Port 22
        ServerAliveInterval 120
        ServerAliveCountMax 5
        TCPKeepAlive yes

